                "operationId": "createCompte",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "type",
                                    "soldeInitial",
                                    "devise",
                                    "client"
                                ],
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "courant",
                                            "epargne"
                                        ],
                                        "example": "courant"
                                    },
                                    "soldeInitial": {
                                        "type": "number",
                                        "format": "float",
                                        "minimum": 10000,
                                        "example": 50000
                                    },
                                    "devise": {
                                        "type": "string",
                                        "maxLength": 10,
                                        "example": "FCFA"
                                    },
                                    "client": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": null,
                                                "nullable": true
                                            },
                                            "titulaire": {
                                                "type": "string",
                                                "example": "Amadou Diallo",
                                                "nullable": true
                                            },
                                            "email": {
                                                "type": "string",
                                                "format": "email",
                                                "example": "amadou.diallo@example.com",
                                                "nullable": true
                                            },
                                            "telephone": {
                                                "type": "string",
                                                "example": "+221771234568",
                                                "nullable": true
                                            },
                                            "adresse": {
                                                "type": "string",
                                                "example": "Dakar, Sénégal",
                                                "nullable": true
                                            }
                                        },
                                        "type": "object"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Compte créé avec succès",
